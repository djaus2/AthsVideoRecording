<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="MauiAndroidVideoCaptureApp.Views.CountdownPopup"
    CanBeDismissedByTappingOutsideOfPopup="False"
    Color="Transparent">
    <!-- Important for rounded corners -->
    <toolkit:Popup.Resources>
        <Style x:Key="PopupBorderStyle" TargetType="Border">
            <Setter Property="StrokeThickness" Value="3" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="BackgroundColor" Value="White" />
            <Setter Property="HorizontalOptions" Value="Fill" />
            <Setter Property="VerticalOptions" Value="Fill" />
            <Setter Property="StrokeShape">
                <RoundRectangle CornerRadius="16" />
            </Setter>
        </Style>
    </toolkit:Popup.Resources>

    <Border Stroke="Red" Style="{StaticResource PopupBorderStyle}" WidthRequest="240" HeightRequest="150">
        <Border Stroke="Yellow" Style="{StaticResource PopupBorderStyle}">
            <Border Stroke="Orange" Style="{StaticResource PopupBorderStyle}">
                <Border Stroke="Green" Style="{StaticResource PopupBorderStyle}">
                    <Border Stroke="Blue" Style="{StaticResource PopupBorderStyle}">
                        <Border Stroke="Indigo" Style="{StaticResource PopupBorderStyle}">
                            <Border Stroke="Violet" Style="{StaticResource PopupBorderStyle}">
                                <VerticalStackLayout Spacing="10" HorizontalOptions="Center" VerticalOptions="Center">
                                    <Label x:Name="CountdownLabel" Text="Starting..." FontSize="24" HorizontalOptions="Center" />
                                    <Button Text="Cancel"
                                        Clicked="OnCancelClicked"
                                        BackgroundColor="#e74c3c"
                                        TextColor="White"
                                        CornerRadius="8"
                                        WidthRequest="100"
                                        HorizontalOptions="Center" />
                                </VerticalStackLayout>
                            </Border>
                        </Border>
                    </Border>
                </Border>
            </Border>
        </Border>
    </Border>
</toolkit:Popup>




