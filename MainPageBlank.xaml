<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiCameraViewSample.MainPageBlank"
             Title="MainPage">
    <VerticalStackLayout Spacing="25" Padding="30" VerticalOptions="Center">
        <Label 
            Text="Simple Test Page"
            FontSize="24"
            FontAttributes="Bold"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
            
        <Label 
            Text="This page works in standalone mode"
            FontSize="16"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
            
        <Button 
            x:Name="NextPageButton"
            Text="Go to MainPage2"
            Clicked="OnNextPageClicked"
            HorizontalOptions="Center"
            BackgroundColor="#512BD4"
            TextColor="White"
            CornerRadius="8"
            Padding="20,10" />
    </VerticalStackLayout>
</ContentPage>