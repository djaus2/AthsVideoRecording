<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AthsVideoRecording.Views.ChangePasswordDialog"
             Title="Change Password">
    <StackLayout Padding="20" Spacing="10">
        <Label x:Name="UsernameLabel" Text="Username" />
        <Entry x:Name="CurrentPasswordEntry" IsPassword="True" Placeholder="Current password" />
        <Entry x:Name="NewPasswordEntry" IsPassword="True" Placeholder="New password" />
        <Entry x:Name="ConfirmPasswordEntry" IsPassword="True" Placeholder="Confirm password" />
        <Button Text="OK" Clicked="Ok_Click"/>
        <Button Text="Cancel" Clicked="Cancel_Click"/>
    </StackLayout>
</ContentPage>